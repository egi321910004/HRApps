<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    android:padding="8dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nama_mhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Nama Mahasiswa"
        app:layout_constraintStart_toEndOf="@+id/_id"
        app:layout_constraintTop_toTopOf="@+id/_id" />

    <TextView
        android:id="@+id/nim_mhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="19dp"
        android:text="Nim Mahasiswa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/_id"
        app:layout_constraintTop_toBottomOf="@+id/nama_mhs" />

    <TextView
        android:gravity="right"
        android:id="@+id/umur_mhs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nama_mhs"
        app:layout_constraintTop_toTopOf="@+id/nama_mhs" />


</androidx.constraintlayout.widget.ConstraintLayout>
